file = {:Users/mauriciomardones/REFERENCIAS/Ref{\_}Thesis{\_}UMAG/Cap{\_}3/Greenetal2023KRILLPODYM.pdf:pdf},
issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Southern Ocean,earth systems,ecosystem modelling,fisheries,mid-trophic prey,population connectivity,spatial processes},
mendeley-groups = {DOCAS/LBSPR,DOCAS/SA{\_}Krill},
