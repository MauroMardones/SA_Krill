keywords = {US west coast fisheries,age-structured models,data-limited models,fisheries stock assessment,integrated models},
mendeley-groups = {DOCAS/SA{\_}Krill},
number = {August},
pages = {1--18},
title = {{Catch and Length Models in the Stock Synthesis Framework: Expanded Application to Data-Moderate Stocks}},
volume = {8},
