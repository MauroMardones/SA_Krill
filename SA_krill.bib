issn = {10510761},
journal = {Ecological Applications},
keywords = {Antarctic krill (Euphausia superba),CCAMLR,Ecosystem model,Ecosystem-based management,Fisheries management,Resilience,Risk,Uncertainty},
mendeley-groups = {DOCAS/LBSPR,DOCAS/SA{\_}Krill},
